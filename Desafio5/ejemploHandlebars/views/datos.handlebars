<h1 style="color:blue;">Ingrese datos de producto</h1>
<br>

<form action="/productos" method="post">

    <div class="form-group">
        <label for="title"><b>Title</b></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>

    <div class="form-group">
        <label for="price"><b>Price</b></label>
        <input id="price" class="form-control" type="number" name="price">
    </div>

    <div class="form-group">
        <label for="image"><b>Image</b></label>
        <input id="image" class="form-control" type="text" name="image">
    </div>

    <button class="btn btn-success mt-3 mb-5">Agregar</button>
</form>

<h2 style="color:crimson;">Productos</h2>

{{#if productos }} 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Title</th> <th>Price</th> <th>Image</th> </tr>
            {{#each productos}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img style="width:80px;height:80px"alt="sin imagen"src="{{image}}"></td>
            </tr>
            {{/each}}
        </table>
    </div>
 {{else}} 
        <h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}